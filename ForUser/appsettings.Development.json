{
  "DetailedErrors": true,
    "Serilog": {
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Information",
          "System": "Information",
          "Microsoft.EntityFrameworkCore": "Information"
        }
      },
      "WriteTo": [
        {
          "Name": "Async",
          "Args": {
            "configure": [
              { "Name": "Console" },
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/log-.txt",
                  "rollingInterval": "Day",
                  "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:j} {Properties:j}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithThreadName" ]
    }
  }
}
