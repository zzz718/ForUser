{
  "DetailedErrors": true,
  "ConnectionStrings": {
    "DefaultConnection": "Server=Data Source=IT-WANGWENBO;Initial Catalog=TestLoging;Integrated Security=True;Persist Security Info=False;Pooling=False;Multiple Active Result Sets=False;Encrypt=True;Trust Server Certificate=True;Command Timeout=0"
  },
  "InitialPassword": "123456",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
